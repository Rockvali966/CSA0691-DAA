#include <stdio.h>
int main()
{
    int i,n,sum=0;
    printf("enter the integer:");
    scanf("%d",&n);
    for(i=1;i<=n/2;i++)
    {
        if(n%i==0)
        {
            sum=sum+i;
        }
    }
    if (sum==n)
    {
        printf("%d is perfect number ",sum);
    }
    else
    {
        printf("%d is not a perfect number");
    }
    return 0;
}
